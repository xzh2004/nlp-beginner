{
  "data": {
    "train_file": "data/train.tsv",
    "test_file": "data/test.tsv",
    "train_ratio": 0.75,
    "val_ratio": 0.15,
    "test_ratio": 0.1
  },
  "features": {
    "type": "tfidf",
    "max_features": 5000,
    "min_df": 3,
    "max_df": 0.85,
    "min_freq": 3,
    "ngram_range": [1, 3],
    "normalize": true,
    "normalize_method": "l2",
    "feature_selection": {
      "enabled": true,
      "method": "chi2",
      "k": 2000
    }
  },
  "model": {
    "type": "softmax",
    "learning_rate": 0.01,
    "max_iter": 2000,
    "batch_size": 32,
    "batch_type": "mini_batch",
    "shuffle": true,
    "regularization": "l2",
    "lambda_reg": 0.001,
    "early_stopping": true,
    "patience": 20,
    "plot_training": true,
    "loss_function": "cross_entropy" 
  }
} 